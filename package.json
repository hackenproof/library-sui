{
    "name": "library-sui",
    "description": "Repository containing Bluefin core exchange contracts that allow users to do on-chain derivatives trading on **SUI** blockchain.",
    "version": "0.1.0",
    "main": "dist/index",
    "typings": "dist/index",
    "scripts": {
        "build": "tsc",
        "buildContract": "ts-node ./scripts/build.ts",
        "deploy": "ts-node ./scripts/deploy/full.ts",
        "deploy:package": "ts-node ./scripts/deploy/package.ts",
        "deploy:market": "ts-node ./scripts/deploy/market.ts",
        "faucet": "ts-node ./scripts/faucet.ts",
        "debug": "ts-node ./scripts/debug.ts",
        "test": "ts-mocha --no-timeout tests/*.test.ts",
        "fund:test:accounts": "ts-node ./tests/helpers/fundAccounts.ts",
        "prepare": "husky install",
        "lint": "yarn eslint --fix --cache --max-warnings=-1 .",
        "format-all": "yarn prettier --write .",
        "format-staged": "git-format-staged -f \"prettier '{}'\" '**/*.js' '**/*.json' '**/*.ts' ",
        "ci:code-formatting": "yarn prettier --check .",
        "ci:code-style": "yarn eslint ."
    },
    "directories": {
        "test": "tests"
    },
    "dependencies": {
        "@mysten/sui.js": "^0.34.0",
        "@noble/hashes": "^1.2.0",
        "@noble/secp256k1": "^1.7.1",
        "add": "^2.0.6",
        "avsc": "^5.7.6",
        "bignumber.js": "^9.1.0",
        "chai-as-promised": "^7.1.1",
        "dotenv": "^16.0.3",
        "ethereumjs-wallet": "^1.0.2",
        "ts-binary-serializer": "^2.1.3",
        "yargs": "^17.6.2",
        "yarn": "^1.22.19"
    },
    "devDependencies": {
        "@types/chai": "^4.3.3",
        "@types/chai-as-promised": "^7.1.5",
        "@types/expect": "^24.3.0",
        "@types/mocha": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "chai": "^4.3.6",
        "eslint": "^8.0.1",
        "eslint-config-standard-with-typescript": "^34.0.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0",
        "eslint-plugin-promise": "^6.0.0",
        "husky": "^8.0.0",
        "mocha": "^10.1.0",
        "prettier": "^2.7.1",
        "pretty-quick": "^3.1.3",
        "ts-mocha": "^10.0.0",
        "ts-node": "^10.9.1",
        "typescript": "*"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fireflyprotocol/bluefin-exchange-contracts-sui.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/fireflyprotocol/library-sui/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist"
    ],
    "homepage": "https://github.com/fireflyprotocol/library-sui#readme"
}
