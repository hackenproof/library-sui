{
    "name": "chain-events-listener",
    "version": "1.0.0",
    "description": "listens to sui chain events and writes to a message broker for async processing by DAPI workers",
    "main": "index",
    "scripts": {
        "start": "node ./build/scripts/startListeners.js",
        "start:dev": "ts-node ./scripts/startListeners.ts",
        "start:pm2:process": "pm2 start 'node ./build/scripts/startListeners.js'",
        "start:docker:rabbitmq": "chmod +x ./scripts/rabbitmq.sh && scripts/rabbitmq.sh",
        "build": "tsc",
        "test": "ts-mocha ./tests/*.test.ts",
        "install:docker": "chmod +x ./scripts/docker.sh && scripts/docker.sh"
    },
    "author": "yameen@seed.im",
    "license": "ISC",
    "dependencies": {
        "@mysten/sui.js": "0.15.0",
        "amqplib": "^0.10.0",
        "dotenv": "^16.0.1",
        "install": "^0.13.0",
        "pino": "^8.0.0"
    },
    "devDependencies": {
        "@types/amqplib": "^0.8.2",
        "@types/chai": "^4.3.1",
        "@types/expect": "^24.3.0",
        "@types/lodash": "^4.14.184",
        "@types/mocha": "^9.1.1",
        "@types/node": "^17.0.41",
        "chai": "^4.3.6",
        "mocha": "^10.0.0",
        "ts-mocha": "^10.0.0",
        "typescript": "^4.7.3"
    }
}
